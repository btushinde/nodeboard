@import 'nib'

.container
  margin-top 60px


h2
  width: 90%
  // font-size: 2em
h3
  margin-top: 20px
pre
  font-family courier
  background-color rgba(0,0,0,.8)
  color yellow
  width 100%
  margin-bottom: 20px
  padding: 10px
  border: 1px solid black


.terminal-ui
  .panel
    background rgb(51, 51, 51)
    width 100%
    height 100%
    color rgb(200,200,200)

    .btn-toolbar
      margin-right 5px
      &:hover
        opacity 1

  .panel-body
    position relative
    ul
      margin-top -40px !important
      list-style-type none
      padding 0
      margin 0
      font-family Consolas, monaco, monospace

